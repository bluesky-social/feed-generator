    "agentkeepalive": "^4.1.4",
    "ava": "^3.15.0",
    "babel-plugin-istanbul": "^6.0.0",
    "babel-plugin-transform-export-default-name": "^2.1.0",
    "coveralls": "^3.1.1",
    "eslint": "^8.10.0",
    "eslint-config-canonical": "^33.0.1",
    "express": "^4.17.3",
    "fastify": "^3.27.2",
    "gitdown": "^3.1.4",
    "got": "^11.8.2",
    "husky": "^7.0.2",
